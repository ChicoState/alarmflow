{
  "name": "Expo Team Env",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "expo-app",
  "workspaceFolder": "/app",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "extensions": ["dbaeumer.vscode-eslint", "esbenp.prettier-vscode"],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "sh" // Alpine uses 'sh' or 'bash' now
      }
    }
  }
  // "features" section removed because we installed git in Dockerfile
}
